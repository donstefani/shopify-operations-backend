{
  "name": "@operations-manager/event-manager",
  "version": "1.0.0",
  "description": "Event manager microservice for operations-manager - handles Shopify webhook processing",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec \"node --import tsx\" src/app.ts",
    "build": "tsc",
    "watch": "tsc -w",
    "start": "node dist/app.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "deploy": "npm run build && serverless deploy",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "offline": "serverless offline",
    "offline:dev": "serverless offline --stage dev",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "shopify",
    "webhooks",
    "events",
    "serverless"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.699.0",
    "@aws-sdk/lib-dynamodb": "^3.699.0",
    "@operations-manager/shared": "file:../shared",
    "@shopify/graphql-client": "^1.4.1",
    "@shopify/shopify-api": "^11.14.1",
    "express": "^5.1.0",
    "graphql": "^16.8.1",
    "helmet": "^7.1.0",
    "mysql2": "^3.6.5",
    "nodemailer": "^6.9.8",
    "zod": "^4.1.7"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.3.1",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "serverless": "^4.19.1",
    "serverless-offline": "^14.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
