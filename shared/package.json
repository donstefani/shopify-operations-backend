{
  "name": "@operations-manager/shared",
  "version": "1.0.0",
  "description": "Shared utilities and configurations for operations manager microservices",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration"
  },
  "dependencies": {
    "mysql2": "^3.6.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.0.0"
  },
  "exports": {
    "./database": {
      "types": "./dist/database/index.d.ts",
      "default": "./dist/database/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts", 
      "default": "./dist/types/index.js"
    }
  }
}
